@page "/upload"

@inject IJSRuntime JS

<div class="mb-2 mt-2">
    <InputFile OnChange="HandleSelectedFiles" accept=".pdf" multiple />
</div>

<div class="mt-3">
<table class="table">
    <thead>
        <tr>
            <th>Dateiname</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in uploadedFiles)
        {
            <tr>
                <td>@file.FileName</td>
                <td>
                    <button class="btn btn-secondary" @onclick="() => RemoveFile(file)">Entfernen</button>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<button class="btn btn-primary" @onclick="MergePDFs">PDFs Zusammenführen</button>
<button class="btn btn-danger" @onclick="RemoveAll">Alle Entfernen</button>